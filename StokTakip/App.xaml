<Application x:Class="StokTakip.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StokTakip"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark"/>
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Renk Tanımları -->
            <SolidColorBrush x:Key="ForegroundLight" Color="Black"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="White"/>
            <SolidColorBrush x:Key="ForegroundDark" Color="White"/>
            <SolidColorBrush x:Key="BackgroundDark" Color="Black"/>

            <!-- Varsayılan Temaya Göre Renkler -->
            <SolidColorBrush x:Key="AppForeground"/>
            <SolidColorBrush x:Key="AppBackground"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
